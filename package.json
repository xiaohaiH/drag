{
    "name": "@xiaohaih/drag",
    "type": "module",
    "version": "1.0.0-beta.2",
    "description": "拖拽插件, 可通过指令或函数调用来拖拽元素移动",
    "keywords": [
        "vue-drag",
        "drag",
        "拖拽",
        "拖拽插件"
    ],
    "exports": {
        ".": {
            "types": "./src/index.ts",
            "import": "./src/index.ts",
            "require": "./dist/index.cjs",
            "browser": "./src/index.umd.cjs"
        },
        "./*": "./src/*"
    },
    "main": "./src/index.umd.cjs",
    "module": "./src/index.ts",
    "unpkg": "./dist/index.umd.cjs",
    "jsdelivr": "dist/index.umd.cjs",
    "types": "./src/index.ts",
    "scripts": {
        "start": "npm run dev",
        "dev": "vite --host",
        "build": "vue-tsc && vite build",
        "lib": "vite build --config vite.lib.config.ts",
        "preview": "vite preview",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "lint:rules": "config-inspector"
    },
    "devDependencies": {
        "@antfu/eslint-config": "^4.1.1",
        "@eslint/config-inspector": "^1.0.0",
        "@types/node": "^20.14.10",
        "@unocss/eslint-plugin": "^65.4.0",
        "@vitejs/plugin-vue": "^5.1.4",
        "@vitejs/plugin-vue-jsx": "^4.0.1",
        "eslint": "^9.18.0",
        "eslint-plugin-format": "^0.1.1",
        "esno": "^4.8.0",
        "lint-staged": "^15.2.2",
        "sass": "^1.71.1",
        "simple-git-hooks": "^2.10.0",
        "typescript": "^5.6.3",
        "unocss": "^0.60.4",
        "vite": "^5.4.9",
        "vite-plugin-dts": "^4.5.0",
        "vite-tsconfig-paths": "^5.0.1",
        "vue": "^3.5.12",
        "vue-component-type-helpers": "^2.1.6",
        "vue-tsc": "^2.1.6"
    },
    "simple-git-hooks": {
        "pre-commit": "pnpm lint-staged"
    },
    "lint-staged": {
        "*": "eslint --fix"
    },
    "publishConfig": {
        "registry": "https://registry.npmjs.org/",
        "access": "public"
    }
}
